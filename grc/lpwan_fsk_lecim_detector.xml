<?xml version="1.0"?>
<block>
  <name>LECIM FSK Detector</name>
  <key>lpwan_fsk_lecim_detector</key>
  <category>[LPWAN]</category>
  <import>import lpwan</import>
  <make>lpwan.fsk_lecim_detector($len_preamble, $sps, $delay, $threshold)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Length preamble</name>
    <key>len_preamble</key>
    <type>int</type>
  </param>
  <param>
    <name>Sample per symbol</name>
    <key>sps</key>
    <type>int</type>
  </param>
  <param>
    <name>Delay max</name>
    <key>delay</key>
    <type>int</type>
  </param>

  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in0</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>in1</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
