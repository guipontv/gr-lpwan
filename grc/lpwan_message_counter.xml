<?xml version="1.0"?>
<block>
  <name>Message Counter</name>
  <key>lpwan_message_counter</key>
  <category>[LPWAN]</category>
  <import>import lpwan</import>
  <make>lpwan.message_counter($interval, $scale, $check)</make>

  <param>
    <name>Interval(s)</name>
    <key>interval</key>
    <value>0</value>
    <type>int</type>
  </param>

  <param>
    <name>Scale</name>
    <key>scale</key>
    <value>1</value>
    <type>float</type>
  </param>

  <param>
    <name>Check</name>
    <key>check</key>
    <type>enum</type>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
